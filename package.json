{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "example": "wrap () { yarn workspace example-\"$*\" dev | cat; }; wrap",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "dev": "concurrently \"yarn workspace @dpc-sdp/ripple-ui-core watch\" \"yarn workspace @dpc-sdp/ripple-tide-api watch\" \"yarn storybook\" \"yarn workspace reference dev\"",
    "clean": "git clean -dfx && git reset --hard && yarn",
    "postinstall": "husky install",
    "release:dev": "lerna publish --canary minor --preid alpha --no-git-tag-version --registry http://localhost:4873/ --dist-tag next",
    "release:prod": "lerna publish --conventional-commits --create-release github"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/vue3": "^6.3.12",
    "babel-loader": "^8.2.3",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "storybook-builder-vite": "^0.1.15",
    "typescript": "^4.4.4",
    "vue-eslint-parser": "^8.0.1",
    "vue-loader": "^16.8.3"
  },
  "engines": {
    "node": "^14.16.0 || ^16.11.0 || ^17.0.0"
  },
  "dependencies": {
    "concurrently": "^6.4.0",
    "rimraf": "^3.0.2"
  }
}
