{
  "name": "@dpc-sdp/ripple-monorepo",
  "private": true,
  "packageManager": "pnpm@7.23.0",
  "license": "Apache-2.0",
  "scripts": {
    "example": "wrap () { pnpm -F example-\"$*\" dev | cat; }; wrap",
    "storybook": "start-storybook -p 6006",
    "dev": "pnpm build && concurrently \"pnpm storybook\" \"pnpm -F nuxt-app dev\"",
    "clean": "git clean -dfx && git reset --hard && pnpm",
    "build": "lerna run build --ignore docs",
    "build:ripple": "lerna run build --scope '@dpc-sdp/ripple-ui-*' --scope @dpc-sdp/ripple-tide-api",
    "build:examples": "lerna run build --scope '{nuxt-app,vue-app,webcomponents}'",
    "build:docs": "lerna run build --scope docs",
    "build:storybook": "build-storybook",
    "postinstall": "patch-package&&husky install&&pnpm build:ripple",
    "preinstall": "npx only-allow pnpm",
    "release:alpha": "lerna version prerelease --preid alpha --yes",
    "release:pre": "lerna version --conventional-commits --conventional-prerelease --preid alpha --yes",
    "release:prod": "lerna version --conventional-commits --conventional-graduate --create-release github --yes",
    "release:publish": "lerna publish from-git --yes --pre-dist-tag=alpha",
    "lint": "eslint . --ext .ts,.vue && pnpm -F @dpc-sdp/ripple-ui-core stylelint \"**/*.css\"",
    "test:unit": "jest --colors  --runInBand",
    "test:storybook": "test-storybook --stories-json",
    "test:storybook-ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"npx http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && pnpm test:storybook\"",
    "test:nuxt-app": "pnpm -F nuxt-app test:integration",
    "ci:nuxt-app": "NUXT_PUBLIC_API_URL=http://localhost:3001 start-test 'pnpm -F nuxt-app start' tcp:3000 'pnpm -F nuxt-app cy:run --reporter junit --reporter-options \"mochaFile=test/results/cypress-output.xml\"'",
    "start:nuxt": "pnpm -F nuxt-app start",
    "start:vue": "pnpm -F vue-app start",
    "start:wc": "pnpm -F webcomponents start",
    "dev:nuxt": "pnpm -F nuxt-app dev",
    "dev:vue": "pnpm -F vue-app dev",
    "dev:wc": "pnpm -F webcomponents dev",
    "cypress": "cypress open --global",
    "chromatic": "npx chromatic --storybook-base-dir ./packages/ripple-ui-core --storybook-config-dir ./packages/ripple-ui-core",
    "generate:component": "hygen component new",
    "generate:content-type": "hygen content-type new"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@badeball/cypress-cucumber-preprocessor": "^15.1.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.1.5",
    "@commitlint/cli": "^17.4.1",
    "@commitlint/config-conventional": "^17.4.0",
    "@dpc-sdp/ripple-ui-core": "workspace:2.1.0-alpha.57",
    "@dpc-sdp/ripple-ui-forms": "workspace:2.1.0-alpha.61",
    "@jest/globals": "^29.3.1",
    "@outlinestudio/designtokenscss": "^1.0.7",
    "@storybook/addon-a11y": "^6.5.15",
    "@storybook/addon-actions": "^6.5.15",
    "@storybook/addon-cssresources": "^6.2.9",
    "@storybook/addon-essentials": "^6.5.15",
    "@storybook/addon-interactions": "^6.5.15",
    "@storybook/addon-jest": "^6.5.15",
    "@storybook/addon-links": "^6.5.15",
    "@storybook/addon-postcss": "3.0.0-alpha.1",
    "@storybook/builder-vite": "^0.2.7",
    "@storybook/builder-webpack4": "^6.5.15",
    "@storybook/jest": "^0.0.10",
    "@storybook/manager-webpack4": "^6.5.15",
    "@storybook/test-runner": "^0.9.2",
    "@storybook/testing-library": "^0.0.13",
    "@storybook/vue3": "^6.5.15",
    "@testing-library/vue": "^6.6.1",
    "@types/jest": "^29.2.5",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "@vitejs/plugin-vue": "^4.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^29.3.1",
    "babel-loader": "^9.1.2",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "babel-plugin-require-context-hook": "^1.0.0",
    "babel-plugin-transform-vue-jsx": "^3.7.0",
    "cypress": "^12.3.0",
    "detab": "^3.0.2",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-junit": "^1.0.1",
    "eslint-plugin-storybook": "^0.6.10",
    "eslint-plugin-vue": "^9.8.0",
    "husky": "^8.0.3",
    "hygen": "^6.2.11",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lerna": "^6.4.0",
    "patch-package": "^6.5.1",
    "postcss-for": "^2.1.1",
    "postcss-nested": "^6.0.0",
    "postcss-normalize": "^10.0.1",
    "postcss-preset-env": "^7.8.3",
    "start-server-and-test": "^1.15.2",
    "storybook-addon-designs": "^6.3.1",
    "ts-jest": "^29.0.4",
    "typescript": "^4.9.4",
    "unist-builder": "^3.0.0",
    "vite": "4.0.4",
    "vue": "^3.2.45",
    "vue-eslint-parser": "^9.1.0",
    "vue-loader": "^17.0.1"
  },
  "engines": {
    "node": "^14.16.0 || ^16.11.0",
    "pnpm": ">=3"
  },
  "dependencies": {
    "@vue/vue3-jest": "^29.2.2",
    "concurrently": "^7.6.0",
    "rimraf": "^3.0.2",
    "vue-jest": "^3.0.7"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "file:./stub/types__react",
      "debug@<3.1.0": "~3.1.0",
      "glob-parent@<5.1.2": "~6.0.2",
      "json5@<2.2.2": "~2.2.2",
      "nth-check@<2.1.1": "~2.1.1",
      "parse-url@<8.1.0": "~8.1.0",
      "postcss@<7.0.36": "~7.0.36",
      "trim@<1.0.1": "~1.0.1",
      "trim-newlines@<3.0.1": "~3.0.1",
      "vite-plugin-svg-icons>postcss": "~8.4.21"
    }
  },
  "version": "0.0.0"
}
