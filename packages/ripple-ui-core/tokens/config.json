{
  "source": ["tokens/settings/*.yaml"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "transforms": [
        "attribute/cti",
        "name/cti/kebab",
        "time/seconds",
        "content/icon",
        "size/pixels",
        "color/css"
      ],
      "prefix": "rpl",
      "files": [
        {
          "destination": "src/styles/generated/_vars.css",
          "format": "css/variables",
          "options": {
            "fileHeader": "rplHeader",
            "outputReferences": true
          }
        }
      ]
    }
  }
}
