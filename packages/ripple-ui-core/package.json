{
  "name": "@dpc-sdp/ripple-ui-core",
  "version": "0.0.0",
  "files": [
    "dist",
    "src",
    "./postcssrc.json",
    "README.md"
  ],
  "main": "./dist/rpl-lib.umd.js",
  "module": "./dist/rpl-lib.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/rpl-lib.es.js",
    "./nuxt": "./dist/nuxt.js",
    "./webcomponents": "./dist/rpl-wc.es.js",
    "./style": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "yarn clean && yarn build:types && yarn build:lib && yarn build:wc",
    "build:types": "tsc -p tsconfig.json",
    "build:lib": "vite build",
    "build:wc": "vite build --config wc.vite.config.ts",
    "types:check": "vue-tsc --noEmit",
    "watch": "yarn build:types && vite build --watch",
    "clean": "rimraf dist* && rimraf tsconfig.tsbuildinfo",
    "preview": "vite preview",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook"
  },
  "dependencies": {
    "autoprefixer": "^10.4.2",
    "postcss-nested": "^5.0.6",
    "vue": "^3.2.31"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/vue3": "^6.4.19",
    "@vitejs/plugin-vue": "^2.2.2",
    "postcss-nested": "^5.0.6",
    "storybook-builder-vite": "^0.1.17",
    "stylelint": "^14.5.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "vite": "^2.8.4",
    "vite-dts": "^1.0.4",
    "vite-plugin-copy": "^0.1.6",
    "vue-tsc": "^0.31.2"
  }
