{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": false,
    "allowJs": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "baseUrl": "./packages",
    "types": ["vite/client"],
    "paths": {
      "@dpc-sdp/ripple-tide-api": ["ripple-tide-api/src"]
      // "@dpc-sdp/ripple-core-ui": ["ripple-core-ui/src"],
    }
  }
}
